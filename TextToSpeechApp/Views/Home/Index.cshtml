@model TextToSpeechApp.Models.SpeechModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="form-group">
        <div class="row">
            <h2>Text To Speech</h2>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="LanguageCode" class="control-label"></label>
                <select asp-items="Model.LanguagePreference" class="btn btn-default dropdown-toggle" id="ddlLangCode" asp-for="LanguageCode"></select>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <textarea asp-for="Content" rows="10" cols="40" class="alert-info"></textarea>
                <button type="submit" class="btn btn-success">Convert</button>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <label class="control-label">Play Voice</label>
                <audio controls>
                    <source src="@Url.Action("Translate", "Home", new { token = ViewBag.Token, key = ViewBag.Key, content = ViewBag.Content , lang = ViewBag.LangCode  })" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            </div>
        </div>
    </div>
</form>